<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sujay.play.m_bhopal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LakesActivity"
            android:label="Lakes"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RestaurantsActivity"
            android:label="Restaurants"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".HistoricalSitesActivity"
            android:label="HistoricalSites"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ShoppingMallsActivity"
            android:label="ShoppingMalls"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>