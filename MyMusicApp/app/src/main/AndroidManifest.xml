<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sujay.play.mymusicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/music_abstract"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LatestSongsActivity"
            android:label="@string/latest_songs" />
        <activity
            android:name=".LatestAlbumsActivity"
            android:label="@string/latest_albums" />
        <activity
            android:name=".ArtistsActivity"
            android:label="@string/artists" />
        <activity
            android:name=".RandomActivity"
            android:label="@string/random" />
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/now_playing" />
        <activity android:name=".PaymentActivity"
            android:label="@string/payment"></activity>
    </application>

</manifest>